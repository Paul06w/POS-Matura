@model List<_241014_Zahlenraten.Models.Score>

@{
    ViewData["Title"] = "Zahlenraten";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-action="MakeGuess" class="p-4 shadow bg-light rounded">
                <h3 class="mb-4 text-center">Zahlenraten Spiel</h3>
                @* <p>@ViewBag.RandomNumber</p> *@
                <p class="text-primary">@ViewBag.Message</p>
                <div class="form-group mb-3">
                    <label for="guessInput" class="form-label">Gib eine Zahl zwischen 1 und 100 ein:</label>
                    <div class="input-group">
                        <span class="input-group-text">
                            <i class="bi bi-hash"></i>
                        </span>
                        <input type="number" name="guess" id="guessInput" class="form-control" placeholder="Deine Zahl" min="1" max="100" required />
                    </div>
                </div>
                <div class="d-grid mb-3">
                    <button type="submit" class="btn btn-primary btn-block">Rate</button>
                </div>
                <div class="d-grid mb-3">
                    <a asp-action="Restart" class="btn btn-secondary btn-block">Neustart</a>
                </div>
                <p class="text-muted">Versuche: @ViewBag.Attempts</p>
            </form>
        </div>
    </div>
</div>

<!-- Bootstrap CSS and Icons -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" />
<link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.9.1/font/bootstrap-icons.min.css" rel="stylesheet" />


<div class="text-center">
    <h3 class="m-4 mt-5 text-center">Highscores</h3>
</div>

<table id="highScoreTable" class="table table-bordered table-hover">
    <thead class="table-dark">
        <tr>
            <td>Username</td>
            <td>Tries</td>
            <td>Target</td>
            <td>Date</td>
        </tr>
    </thead>

    <tbody>
        @{
            string currentUserName = User.Identity.Name;
            foreach (Score score in Model)
            {
                var rowClass = score.UserName == currentUserName ? "table-primary" : "";        //Hervorhebung von dem aktuellen Benutzer mittels Farbe

                <tr class="@rowClass">
                    <td>@score.UserName</td>
                    <td>@score.Tries</td>
                    <td>@score.Target</td>
                    <td>@score.Date</td>
                </tr>
            }
        }
    </tbody>
</table>
