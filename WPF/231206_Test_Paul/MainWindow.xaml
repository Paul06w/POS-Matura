<Window x:Class="_231206_Test_Paul.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_231206_Test_Paul"
        mc:Ignorable="d"
        Background="LightBlue"
        Title="JSON Placeholder Browser" Height="650" Width="1100" Icon="/Mucki.png">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height = "*" />
            <RowDefinition Height="*"/>
            <RowDefinition Height = "6*" />
            <RowDefinition Height = "*" />
        </Grid.RowDefinitions >


        <Grid.ColumnDefinitions >
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width = "*" />
            <ColumnDefinition Width = "*" />
        </Grid.ColumnDefinitions >



        <Label Grid.Row="0" Grid.ColumnSpan= "3" x:Name= "labelheader" Content= "JSON Placeholder Browser" VerticalContentAlignment= "Center" HorizontalContentAlignment= "Center" Foreground= "Black" FontSize= "25" Margin= "0,0,0,0" />
        <Label Grid.Row="1" Grid.Column="0" Content="User Information" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="20"/>
        <Label Grid.Row="1" Grid.Column="1" Content="Favourite Albums" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="20"/>
        <Label Grid.Row="1" Grid.Column="2" Content="First Thumbnail Image" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="20"/>
        <DataGrid Grid.Row= "2" Grid.Column= "0" x:Name= "dataGridUserInformation" Margin= "20,20,20,20" IsReadOnly= "True" AutoGenerateColumns= "False" MouseDoubleClick="dataGridUserInformation_MouseDoubleClick">
            <DataGrid.Columns >
                
            </DataGrid.Columns >
        </DataGrid >
        <DataGrid Grid.Row= "2" Grid.Column= "1" x:Name= "dataGridFavouriteAlbums" Margin= "20,20,20,20" IsReadOnly= "True" MouseDoubleClick="dataGridFavouriteAlbums_MouseDoubleClick"/>
        <Image Grid.Row="2" Grid.Column="2" x:Name="imagePhoto"/>
        <Button Grid.Row="3" Grid.Column="0" Content="Load Content" VerticalAlignment="Center" HorizontalAlignment="Center" Click="Button_Click"/>

    </Grid>
</Window>
