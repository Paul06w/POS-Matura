<Window x:Class="_240131_Labordiagnostik.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_240131_Labordiagnostik"
        mc:Ignorable="d"
        Title="Labordiagnostik" Height="500" Width="650" Icon="/icon2.png">
    <Grid Margin="20,10,20,10">

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="10*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Grid.Column="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.2*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="0.3*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Label Grid.Row="0" Grid.Column="1" Content="1" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="20" FontWeight="Bold"></Label>
            <Label Grid.Row="0" Grid.Column="2" Content="2" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="20" FontWeight="Bold"></Label>
            <Label Grid.Row="0" Grid.Column="3" Content="3" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="20" FontWeight="Bold"></Label>
            <Label Grid.Row="0" Grid.Column="4" Content="4" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="20" FontWeight="Bold"></Label>
            <Label Grid.Row="1" Grid.Column="0" Content="A" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="20" FontWeight="Bold"></Label>
            <Label Grid.Row="2" Grid.Column="0" Content="B" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="20" FontWeight="Bold"></Label>
            <Label Grid.Row="3" Grid.Column="0" Content="C" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="20" FontWeight="Bold"></Label>


            <Ellipse Grid.Row="1" Grid.Column="1" x:Name="A1" Fill="White" Stroke="Black" Height="110" Width="110"></Ellipse>
            <Ellipse Grid.Row="1" Grid.Column="2" x:Name="A2" Fill="White" Stroke="Black" Height="110" Width="110"></Ellipse>
            <Ellipse Grid.Row="1" Grid.Column="3" x:Name="A3" Fill="White" Stroke="Black" Height="110" Width="110"></Ellipse>
            <Ellipse Grid.Row="1" Grid.Column="4" x:Name="A4" Fill="White" Stroke="Black" Height="110" Width="110"></Ellipse>

            <Ellipse Grid.Row="2" Grid.Column="1" x:Name="B1" Fill="White" Stroke="Black" Height="110" Width="110"></Ellipse>
            <Ellipse Grid.Row="2" Grid.Column="2" x:Name="B2" Fill="White" Stroke="Black" Height="110" Width="110"></Ellipse>
            <Ellipse Grid.Row="2" Grid.Column="3" x:Name="B3" Fill="White" Stroke="Black" Height="110" Width="110"></Ellipse>
            <Ellipse Grid.Row="2" Grid.Column="4" x:Name="B4" Fill="White" Stroke="Black" Height="110" Width="110"></Ellipse>

            <Ellipse Grid.Row="3" Grid.Column="1" x:Name="C1" Fill="White" Stroke="Black" Height="110" Width="110"></Ellipse>
            <Ellipse Grid.Row="3" Grid.Column="2" x:Name="C2" Fill="White" Stroke="Black" Height="110" Width="110"></Ellipse>
            <Ellipse Grid.Row="3" Grid.Column="3" x:Name="C3" Fill="White" Stroke="Black" Height="110" Width="110"></Ellipse>
            <Ellipse Grid.Row="3" Grid.Column="4" x:Name="C4" Fill="White" Stroke="Black" Height="110" Width="110"></Ellipse>

            
            <TextBlock Grid.Row="1" Grid.Column="1" x:Name="TextA1" Text="NaN" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="18"></TextBlock>
            <TextBlock Grid.Row="1" Grid.Column="2" x:Name="TextA2" Text="NaN" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="18"></TextBlock>
            <TextBlock Grid.Row="1" Grid.Column="3" x:Name="TextA3" Text="NaN" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="18"></TextBlock>
            <TextBlock Grid.Row="1" Grid.Column="4" x:Name="TextA4" Text="NaN" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="18"></TextBlock>

            <TextBlock Grid.Row="2" Grid.Column="1" x:Name="TextB1" Text="NaN" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="18"></TextBlock>
            <TextBlock Grid.Row="2" Grid.Column="2" x:Name="TextB2" Text="NaN" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="18"></TextBlock>
            <TextBlock Grid.Row="2" Grid.Column="3" x:Name="TextB3" Text="NaN" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="18"></TextBlock>
            <TextBlock Grid.Row="2" Grid.Column="4" x:Name="TextB4" Text="NaN" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="18"></TextBlock>

            <TextBlock Grid.Row="3" Grid.Column="1" x:Name="TextC1" Text="NaN" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="18"></TextBlock>
            <TextBlock Grid.Row="3" Grid.Column="2" x:Name="TextC2" Text="NaN" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="18"></TextBlock>
            <TextBlock Grid.Row="3" Grid.Column="3" x:Name="TextC3" Text="NaN" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="18"></TextBlock>
            <TextBlock Grid.Row="3" Grid.Column="4" x:Name="TextC4" Text="NaN" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="18"></TextBlock>
            

        </Grid>

        

        <Grid Grid.Row="1" Grid.Column="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Button Grid.Column="0" Grid.Row="0" x:Name="ButtonLoadValues" Margin="10" Content="Load Values" Click="ButtonLoadValues_Click"></Button>
            <ComboBox Grid.Column="2" Grid.Row="0" x:Name="ComboBoxAuswahl" Margin="10" SelectionChanged="ComboBoxAuswahl_SelectionChanged">
                <ComboBoxItem Content="Absorbance-Wert"/>
                <ComboBoxItem Content="Fluoreszenz-Wert"/>
            </ComboBox>
            
        </Grid>
        
        
       
        
    </Grid>
</Window>
