<Window x:Class="Labordiagnostik.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Labordiagnostik"
        mc:Ignorable="d"
        Title="Labordiagnostik" Height="700" Width="800" MinHeight="350" MinWidth="400" SizeChanged="ChangeSize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.Resources>
            <Style TargetType="Border">
                <Setter Property="Margin" Value="5"/>
            </Style>
            <Style TargetType="Label">
                <Setter Property="HorizontalAlignment" Value="Center"/>
                <Setter Property="VerticalAlignment" Value="Center"/>
                <Setter Property="FontSize" Value="25"/>
            </Style>
            <Style TargetType="ComboBox">
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="BorderBrush" Value="Transparent"/>
            </Style>
        </Grid.Resources>

        <Border Grid.Row="0" BorderThickness="3" CornerRadius="5" BorderBrush="Black">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Label Content=" " Grid.Row="0" Grid.Column="0"/>
                <Label Content="1" Grid.Row="0" Grid.Column="1"/>
                <Label Content="2" Grid.Row="0" Grid.Column="2"/>
                <Label Content="3" Grid.Row="0" Grid.Column="3"/>
                <Label Content="4" Grid.Row="0" Grid.Column="4"/>

                <Label Content="A" Grid.Row="1" Grid.Column="0"/>
                <Label Content="B" Grid.Row="2" Grid.Column="0"/>
                <Label Content="C" Grid.Row="3" Grid.Column="0"/>

                <UniformGrid x:Name="uniGrid" Columns="4" Rows="3" Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="4" Grid.RowSpan="3"/>
            </Grid>
        </Border>
        
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Border Panel.ZIndex="10000" Grid.Column="0" Grid.ColumnSpan="2" VerticalAlignment="Stretch" BorderBrush="Black" BorderThickness="2" CornerRadius="5">
                <Grid VerticalAlignment="Stretch">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Button Grid.Column="0" Content="Daten Lesen" Click="readData"/>
                    <ComboBox Grid.Column="1" x:Name="readingSource" SelectionChanged="switchReadingStrategy" />
                </Grid>
            </Border>

            <Border Grid.Column="2" VerticalAlignment="Stretch" BorderBrush="Black" BorderThickness="2" CornerRadius="5">
                <ComboBox x:Name="showing" SelectionChanged="switchData"/>
            </Border>

            <Border Grid.Column="3" Grid.ColumnSpan="2" VerticalAlignment="Stretch" BorderBrush="Black" BorderThickness="2" CornerRadius="5">
                <Grid VerticalAlignment="Stretch">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <ComboBox Grid.Column="0" x:Name="savingDestination"/>
                    <Button Grid.Column="1" Content="Speichern" Click="save"/>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>
